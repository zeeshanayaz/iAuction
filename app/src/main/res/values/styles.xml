<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="MaterialTheme" parent="Theme.MaterialComponents.Bridge"/>-->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light">

    </style>


    <style name="registrationHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:color">@color/primaryTextColorBlack</item>
        <item name="android:fontFamily">@font/lemon</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
